<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/spc2"
    android:layout_marginStart="@dimen/spc3"
    android:layout_marginEnd="@dimen/spc3"
    android:layout_marginBottom="@dimen/spc3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spc6">

        <TextView
            android:id="@+id/reviewAuthorTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Ahmad Khalifa"
            android:textSize="@dimen/txt5"
            android:textColor="@color/green"/>

        <TextView
            android:layout_marginTop="@dimen/spc2"
            android:textSize="@dimen/txt3"
            android:id="@+id/reviewContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="That was an awesome movie. I liked it a lot."/>

    </LinearLayout>

</android.support.v7.widget.CardView>
