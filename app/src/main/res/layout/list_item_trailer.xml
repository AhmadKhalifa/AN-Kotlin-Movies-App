<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:contentPadding="-2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/spc1"
    android:orientation="horizontal"
    android:layout_margin="@dimen/spc2"
    android:layout_width="@dimen/trailer_image_width"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:background="@drawable/selector_list_item"
    android:id="@+id/trailerCardView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trailer_image_height">

            <ImageView
                android:id="@+id/trailerThumbnailImageView"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:background="@color/light_transparent"
                android:padding="@dimen/spc9"
                android:src="@drawable/ic_play_circle_outline_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <TextView
            android:layout_margin="@dimen/spc4"
            android:textColor="@color/light_grey"
            android:textStyle="bold"
            android:textSize="@dimen/tiny_txt2"
            android:text="@string/trailer_type_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/trailerNameTextView"
            android:layout_marginStart="@dimen/spc4"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/spc4"
            android:layout_marginBottom="@dimen/spc4"
            android:textSize="@dimen/txt4"
            tools:text="Trailer #1 name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</android.support.v7.widget.CardView>